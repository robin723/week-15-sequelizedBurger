<div class="container-fluid">

  <img src="assets/images/BobsBurger_Logo.jpg" class="img-responsive headPic">
  <br>

  <div class="middle">
  <div class="menu leftside text-center">
  <br>
  <img src="assets/images/burgerOfTheDay.jpg" class="img-responsive">
  <br>
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <div class="eachBurger">
          <li>
            <br>
            {{this.burger_name}}
            <br>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-warning">Put it on the table!</button>
            </form>

            <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
              <input type="hidden" name="delete" value="true">
              <button type="submit" class="btn btn-warning">Get rid of that burger!</button>
            </form>
          </li>
        </div>
      {{/unless}}
    {{/each}}
  </ul>
  </div>

  <div class="table rightside text-center">
  <br>
  <h2 class="tabTitle">Your Table</h2>
  <br>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <div class="eachBurger">
        <li>
          <br>
          {{this.burger_name}}
          <br>
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit" class="btn btn-warning">Put it on the menu!</button>
          </form>

          <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="delete" value="true">
            <button type="submit" class="btn btn-warning">Get rid of that burger!</button>
          </form>
        </li>
      </div>
      {{/if}}
    {{/each}}
  </ul>
  </div>
  </div>

  <div class="addBurger text-center">
  <br><br>
  <h2>Add a Burger</h2>
  <br>
  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <div class="form-group">
      <label for="eat">Where the burger at?</label><br>
      <input type="radio" name="devoured" value="1" checked> On the Table<br>
      <input type="radio" name="devoured" value="0"> On the Menu
    </div>

    <button type="submit">Add Burger</button>
  </form>
  </div>

</div>